<div class="top-content bodyt">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h1><strong>Sign up</strong></h1>
              <p>Enter your username and password to log</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-key"></i>
            </div>
          </div>
          <div class="form-bottom">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
              
                <div class="field">
                  <%= f.email_field :email, autofocus: true ,class:"form-control input-lg", placeholder:"Email Address"%>
                </div>
              
                <div class="field">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off",type:"password",class:"form-control input-lg", placeholder:"Password" %>
                </div>
                <br>
                <div class="field">
                  <%= f.password_field :password_confirmation, autocomplete: "off" ,type:"password",class:"form-control input-lg", placeholder:"Password confirmation"%>
                </div>
                <hr class="colorgraph">
                        <%= f.submit "Sign up" ,type:"submit",class:"btn btn-lg btn-success btn-block" %>
                    <%= render "devise/shared/links" %>
              <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
